// ===== UTILITY =====

fn sys_isWindows() {
    return sys_platform() == "windows";
}

fn sys_isLinux() {
    return sys_platform() == "linux";
}

fn sys_isMacOS() {
    return sys_platform() == "macos";
}

fn sys_isX64() {
    return sys_arch() == "x64";
}

fn sys_isARM() {
    let arch = sys_arch();
    return arch == "arm64" || arch == "arm";
}
